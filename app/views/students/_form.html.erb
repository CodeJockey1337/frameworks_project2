<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Student First and Last Name' %><br>
    <%= f.text_field :student_name %>
  </div>
  <div class="field">
    <%= f.label 'Student ID Number' %><br>
    <%= f.text_field :student_number %>
  </div>
  <div>
    <%= f.label 'Class Sections' %>
    <!--The method call below needs to be sent the "Section.all" object to work correctly -->
    <%= :section_ids ? f.collection_check_boxes(:section_ids, Section.all, :id, :complete_section_name) : 'No sections' %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
