<p id="notice"><%= notice %></p>

<h1>Students Enrolled at MSUD</h1>

<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Student ID Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.student_name %></td>
        <td><%= student.student_number %></td>
        <td><%= link_to 'View student details', student %></td>
        <td><%= link_to 'Edit student details and add class sections', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= form_tag(students_name_search_path, method: "get") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
  <% end %>
</p>

