<p id="notice"><%= notice %></p>
<h1>Section Details</h1>
<p>
  <strong>Course Name:</strong>
  <%= @section.course ? @section.course.name : "NIL COURSE NAME" %>
</p>

<p>
  <strong>Course Code:</strong>
  <%= @section.course ? @section.course.course_code : "NIL COURSE CODE" %>
</p>

<p>
  <strong>Section:</strong>
  <%= @section.section_number %>
</p>

<p>
  <strong>Professor:</strong>
  <%= @section.professor ? @section.professor.name + ' ' + @section.professor.last_name : "NIL STUDENT NAME" %>
</p>
<p>
  <strong>Students in this section:</strong>
</p>
<ul>
  <% @section.students.each do |student| %>
    <li><%= student.student_name %> </li>
  <% end %>
</ul>



<%= link_to 'Edit', edit_section_path(@section) %> |
<%= link_to 'Return to Sections list', sections_path %> |
<%= link_to 'New section', new_section_path %>