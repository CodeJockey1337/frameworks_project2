<p id="notice"><%= notice %></p>

<h1>Course Listing for MSUD</h1>

<table>
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Department</th>
      <th>Course Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course ? course.name : "NIL COURSE NAME" %></td>
        <td><%= course ? course.department_name : "NIL DEPARTMENT NAME" %></td>
        <td><%= course ? course.course_code : "NIL COURSE CODE" %></td>
        <td><%= link_to 'View Course Info and Sections', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= form_tag(courses_name_search_path, method: "get") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
  <% end %>
</p>

